      </form>
    </div>
  </div>

  
</div>

<script>
  function toggleClass(uid) {
    var formId = 'modify-form-' + uid;
    var element = document.getElementById(formId);
    
    if (element) {
      element.classList.toggle('show');
    }
  }
</script>

